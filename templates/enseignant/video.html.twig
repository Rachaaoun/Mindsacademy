{% extends 'baseadmin.html.twig' %}
{% block body %}
<br><br>
 <!-- ======= Courses Section ======= -->
    <section id="courses" class="courses">
      <div class="container" data-aos="fade-up">

        <div class="row" data-aos="zoom-in" data-aos-delay="100">
 {% for video in videos %}
          <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
            <div class="course-item">
              <video width="320" height="240" controls>
         <source src="{{ asset('webVideos/' ~ video.video) }}"  >

            </video>
              <div class="course-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h4>{{ video.titre }}</h4>
                  <p class="price"></p>
                </div>

                <p></p>
                <div class="trainer d-flex justify-content-between align-items-center">
                  <div class="trainer-profile d-flex align-items-center">
                    <img src="assets/img/trainers/trainer-1.jpg" class="img-fluid" alt="">
                    <span>Enseignant : {{enseignant}}</span>
                  </div>
                  <div class="trainer-rank d-flex align-items-center">
                   <a href="{{ path('video_show', {'id': video.id}) }}" class="btn btn-success">show</a>
                    <a href="{{ path('video_edit', {'id': video.id}) }}" class="btn btn-dark">edit</a>
                  </div>
                </div>
              </div>
            </div>
          </div> <!-- End Course Item-->

          
              {% endfor %}
           

        </div>

      </div>
    </section><!-- End Courses Section -->
<br><br><br>
    <a href="{{ path('video_new_enseignant', {'id': id}) }}" class="btn btn-success">Ajouter Video</a>
  </main><!-- End #main -->



{% endblock %}