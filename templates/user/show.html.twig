{% extends 'baseadmin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('webImage/' ~ user.image) }}" height="100px" width="100px"></td>
            </tr>
             <tr>
                <th>Numero de telephone</th>
                <td>{{ user.numerotelephone }}</td>
            </tr>
             <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
             <tr>
                <th>Classe</th>
                <td>{{ user.classe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-success">Retourner a la liste </a><br>
<br><br>
  

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
