{% extends 'baseadmin.html.twig' %}

{% block title %}Niveau {% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Niveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for niveau in niveaux %}
            <tr>
                <td>{{ niveau.id }}</td>
                <td>{{ niveau.niveau }}</td>
                <td>
                    <a href="{{ path('niveau_show', {'id': niveau.id}) }}">show</a>
                    <a href="{{ path('niveau_edit', {'id': niveau.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('niveau_new') }}" class="btn btn-success">Ajouter Niveau</a>
{% endblock %}
